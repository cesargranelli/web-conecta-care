{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "web-connecta": {
      "projectType": "application",
      "schematics": {},
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/web-connecta",
            "index": "src/index.html",
            "main": "src/main.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "tsconfig.app.json",
            "aot": true,
            "assets": [
              "src/favicon.ico",
              "src/assets",
              "src/.htaccess"
            ],
            "styles": [
              "src/styles.css",
              "src/assets/css/material-dashboard.min.css"
            ],
            "scripts": [
              { "input": "src/assets/js/core/jquery.min.js", "bundleName": "jquery", "inject": false },
              { "input": "src/assets/js/core/popper.min.js", "bundleName": "popper", "inject": false },
              { "input": "src/assets/js/core/bootstrap-material-design.min.js", "bundleName": "bootstrap-material-design", "inject": false },
              { "input": "src/assets/js/plugins/perfect-scrollbar.jquery.min.js", "bundleName": "perfect-scrollbar.jquery", "inject": false },
              { "input": "src/assets/js/plugins/jquery.validate.min.js", "bundleName": "jquery.validate", "inject": false },
              { "input": "src/assets/js/plugins/jquery.bootstrap-wizard.js", "bundleName": "jquery.bootstrap-wizard", "inject": false },
              { "input": "src/assets/js/plugins/sweetalert2.js", "bundleName": "sweetalert2", "inject": false },
              { "input": "src/assets/js/plugins/bootstrap-selectpicker.js", "bundleName": "bootstrap-selectpicker", "inject": false },
              { "input": "src/assets/js/plugins/moment.min.js", "bundleName": "moment", "inject": false },
              { "input": "src/assets/js/plugins/bootstrap-datetimepicker.min.js", "bundleName": "bootstrap-datetimepicker", "inject": false },
              { "input": "src/assets/js/plugins/jasny-bootstrap.min.js", "bundleName": "jasny-bootstrap", "inject": false },
              { "input": "src/assets/js/app.js", "bundleName": "app", "inject": false },
              { "input": "src/assets/js/material-dashboard.min.js", "bundleName": "material-dashboard", "inject": false }
            ]
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "2mb",
                  "maximumError": "5mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "6kb",
                  "maximumError": "10kb"
                }
              ]
            },
            "staging": {
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.staging.ts"
                }
              ]
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "web-connecta:build"
          },
          "configurations": {
            "production": {
              "browserTarget": "web-connecta:build:production"
            },
            "staging": {
              "browserTarget": "web-connecta:build:staging"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "web-connecta:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "src/test.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "tsconfig.spec.json",
            "karmaConfig": "karma.conf.js",
            "assets": [
              "src/favicon.ico",
              "src/assets"
            ],
            "styles": [
              "src/styles.css"
            ],
            "scripts": []
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "tsconfig.app.json",
              "tsconfig.spec.json",
              "e2e/tsconfig.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        },
        "e2e": {
          "builder": "@angular-devkit/build-angular:protractor",
          "options": {
            "protractorConfig": "e2e/protractor.conf.js",
            "devServerTarget": "web-connecta:serve"
          },
          "configurations": {
            "production": {
              "devServerTarget": "web-connecta:serve:production"
            }
          }
        }
      }
    }
  },
  "defaultProject": "web-connecta",
  "cli": {
    "analytics": false
  }
}
